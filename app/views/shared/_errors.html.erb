<% if obj && obj.errors.any? %>

  <div class="row">
    <div class="col-md-12  card" style="background-color:rgb(244, 178, 178);">
          <h2 class="panel-title">
            <%= pluralize(obj.errors.count, "error") %> 
          </h2>
          <div class="panel-body">
            <ul>
              <% obj.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      </div>
  </div>
<% end %>