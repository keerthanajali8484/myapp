<%= render 'shared/page_title', title: "Chefs" %>
<br>
<div align="center">
  <% @chefs.each do |chef| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4 card center" style="margin: 0 auto; width: 50%;">
          <li><%= link_to gravatar_for(chef), chef_path(chef) %></li>
          <li class="chef-title"><%= link_to chef.name, chef_path(chef) %></li>
          <li><small><%= pluralize(chef.recipes.count, "recipe") if chef.recipes %></small></li>
          <% if current_chef&.admin? || chef==current_chef%>
          <div class="col-md-4 recipe-actions">
            <%= button_to "Delete", chef_path(chef), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-danger" %>
          </div>
          <% end %>
        </div>
        
      </div>
    </ul>
          <br>
  <% end %>
  <%= will_paginate %>
</div>
