<%= render 'shared/errors',obj:@ingredient %>
<div class="row">

  <div class="col-md-12">
    <%= form_for(@ingredient, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <br>
        <div class="form-group">
        <div class="control-label col-md-2">
        <strong> <%= f.label :name %></strong>
        </div>
        <br>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control",placeholder: "Enter ingredient", 
        autofocus: true %>
        </div>
      </div>
      <br>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
        <%= f.submit(@ingredient.new_record? ? "Add Ingredient" : "Update Ingredient",
        class: "btn btn-danger") %>
        
        </div>
      </div>
    <% end %>
    <br>
    <div class="col-md-4 col-md-offset-4 well">
       <%= link_to "Cancel request and return to recipes",recipes_path%>
    </div>
  </div>
</div>