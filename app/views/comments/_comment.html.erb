<div class="comment card">
<div class="row">
  <div class="col-md-2">
    <section class="chef_info center">
      <%= gravatar_for(comment.chef, size: 60) %>
    </section>
  </div><br>
  <div class="col-md-8 well">
    <p>Comments :&nbsp<%= comment.description %></p>
    <p>Rating :&nbsp<%= comment.rating %></p>


    <p>
      <span class="quiet"><small>Created: 
                          <%= time_ago_in_words(comment.created_at) %> ago by 
                          <%= comment.chef.name %></small></span>
    </p>
  </div>
</div>

</div>
<br>
