<%= render 'shared/page_title', title:@recipe.name %>
<hr>
<div class="well">
      <h5 class="description"><strong>Steps: </strong></h5>
      <p>
         <%= simple_format(@recipe.description) %>
      </p>
    <br>
  <hr>
  <div class="pull-right">
     <p>
       Created by:<br>
     </p>
  </div>
   <p>
      <%= link_to gravatar_for(@recipe.chef), recipes_path %>
    </p>
    <small><%= @recipe.chef.name.capitalize %></small>
    <div class="time">
      <small><%= time_ago_in_words(@recipe.created_at) %> ago<small>
    </div>
    <br>
    <div class="row">
    <div class="col-md-4 recipe-actions">
        <%= link_to "Edit this recipe", edit_recipe_path(@recipe),class: 'btn btn-secondary' %>
    </div>
    <div class="col-md-4 recipe-actions">
        <%= button_to "Delete this recipe", recipe_path(@recipe), method: :delete,data: { confirm: "Are you sure you want to delete?" },class: "btn  btn-danger" %>
       </div>
        <div class="col-md-4 recipe-actions"> 
        <%= link_to "Return to recipes ", recipes_path, 

        class: "btn btn-xs btn-dark" %>
          </div
        </div>  
</div>
  
