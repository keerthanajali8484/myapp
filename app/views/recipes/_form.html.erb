<%= render 'shared/errors',obj:@recipe %>
<div class="row">

  <div class="col-md-12">
    <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <br>
        <div class="form-group">
        <div class="control-label col-md-2">
        <strong> <%= f.label :name %></strong>
        </div>
        <br>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control",placeholder: "Name of recipe", 
        autofocus: true %>
        </div>
      </div>
      <br>
      <div class="form-group">
        <div class="control-label col-md-2">
        <strong><%= f.label :description %></strong>
        </div>
        <br>
        <div class="col-md-8">
          <%= f.text_area :description, rows: 10, class: "form-control", 
            placeholder: "Enter steps to create recipe" %>
        </div>
        <br>
      </div>
